Bootstrap: docker

From: continuumio/miniconda3

%environment

%post
    ENV_NAME=$(head -1 yanocomp.yml | cut -d' ' -f2)
    echo ". /opt/conda/etc/profile.d/conda.sh" >> $SINGULARITY_ENVIRONMENT
    echo "conda activate $ENV_NAME" >> $SINGULARITY_ENVIRONMENT

    . /opt/conda/etc/profile.d/conda.sh
    git clone https://github.com/bartongroup/yanocomp.git
    cd yanocomp
    conda env create -f yanocomp.yml -p /opt/conda/envs/$ENV_NAME
    conda clean --all

%runscript
    exec "$@"